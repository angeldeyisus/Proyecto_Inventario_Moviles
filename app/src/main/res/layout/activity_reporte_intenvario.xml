<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_flecha_atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_back"
        android:contentDescription="Flecha Atrás"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_titulo_reporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reporte"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_articulos_por_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artículos por categoría:"
        android:textSize="16sp"
        android:layout_below="@id/tv_titulo_reporte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/iv_grafica"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/grafica"
        android:contentDescription="Gráfica de Artículos por Categoría"
        android:layout_below="@id/tv_articulos_por_categoria"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_resumen_inventario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen de inventario"
        android:textSize="16sp"
        android:layout_below="@id/iv_grafica"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_inventario_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventario total: 86"
        android:textSize="14sp"
        android:layout_below="@id/tv_resumen_inventario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_inventario_por_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventario por categoría\ncategoría 1: 67\ncategoría 2: 14\ncategoría 3: 5"
        android:textSize="14sp"
        android:layout_below="@id/tv_inventario_total"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_resumen_entradas_salidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumen de Entradas y Salidas"
        android:textSize="16sp"
        android:layout_below="@id/tv_inventario_por_categoria"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

</RelativeLayout>